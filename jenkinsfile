pipeline {
    agent any

    stages {
        stage('Checkout Repos') {
            steps {
                // Checkout Repo A
                git branch: 'master',
                    url: 'https://github.com/bharanigowtham/HRMLive_Development.git'

                // Checkout Repo B (automation)
                dir('testing repo') {
                    git branch: 'master',
                        url: 'https://github.com/bharanigowtham/HRMLive_Testing.git'
                }
            }
        }

        stage('Run Automation') {
            steps {
                dir('testing repo') {
                    sh "mvn clean test"
                }
            }
        }
    }
}
